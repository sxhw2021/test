<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"/>

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/ic_menu_preferences"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoDisplay">

        <!-- Xposed Module Declaration -->
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="Salt Player lyrics adapter for Lyricon" />
        <meta-data
            android:name="xposedminversion"
            android:value="93" />

        <!-- Lyricon Provider Module Declaration -->
        <meta-data
            android:name="lyricon_module"
            android:value="true" />
        <meta-data
            android:name="lyricon_module_author"
            android:value="SaltAdapter Developer" />
        <meta-data
            android:name="lyricon_module_description"
            android:value="Extracts lyrics from Salt Player for Lyricon display" />
        <meta-data
            android:name="lyricon_module_tags"
            android:resource="@array/lyricon_module_tags" />

    </application>

</manifest>
